<!DOCTYPE html>
  <html lang="en-us">
    <head>
      <%- include ("../partials/header.ejs") %>
      <title>All Company's Data</title>
      <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
      <link rel="stylesheet" href="/stylesheets/login.css" />
      <link rel="stylesheet" href="/stylesheets/urlPage.css" />
      <script type="text/javascript" src="../../public/display.js" async></script>
    </head>

    <body>

    <div id="main">
      <div id="button">
        <form class="logoutform" action="/home">
          <button id="url">URL</button>
        </form>

        <form class="logoutform" action="/display">
          <button id="scrapedData">Scraped Data</button>
        </form>

        <form class="logoutform" action="/logout?_method=DELETE" method="POST">
          <button id="logout" method="POST" type="submit">Log Out</button>
        </form>
      </div>
      
    <div class="data-container">
      <form action="/company-name" method="POST">
        <!-- <h2>Canadian Appliance</h2> -->
      </form>

      <div class='filter'>
        <form action="skuwSearch" method="post">
          <input name="Sku_name" id="Sku_name" class="filtersku" type="text" placeholder="SKU Number" onkeypress="form.submit()">
        </form>        
      </div>

      <table id="displayData">
        <tr>
          <th>No.</th>
          <th>SKU</th>
          <th>Product's Name</th>
          <th>Sales Price</th>
          <th>Url</th>
          <th>Last Price Updated</th>
        </tr>
        <form id="display-data" action="/display-all-data" method="POST">
          <% results.forEach(function(r) { %>
            <tr>
                <td><%=r.id%></td>
                <td><%=r.sku%></td>
                <td><%=r.name%></td>
                <td><%=r.price%></td>
                <td><%=r.url%></td>
                <td><%=r.lpmod%></td>
              </form>
            </tr>
          <%}); %>
      </form>


      </table>
    </div>

    </body>
</html>
