<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <%- include ("../partials/header.ejs") %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/stylesheets/urlPage.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="scraper.js" async></script>
    <script type="text/javascript" src="scraper2.js" aync></script>
    <script type="text/javascript" src="display.js" async></script>
    <title>Price Scraping Tool</title>
  </head>
  <body>
    <div id="main">
      <div id="button">
        <button id="url">URL</button>

        <form class="logoutform" action="/display">
          <button id="scrapedData">Scraped Data</button>
        </form>

        <form class="logoutform" action="/logout?_method=DELETE" method="POST">
          <button id="logout" method="POST" type="submit">Log Out</button>
        </form>
      </div>

      <div>
        <div id="price">
          <h1>Price Scraping Tool</h1>
          <table id="urlTable">
            <thead>
              <tr>
                <th id="text1">Homepage Url</th>
                <th id="text2">Profile</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="urlInput">
                  <input type="text" class="urlInput" id="name" name="uname" />
                </td>
                <td class="profileInput">
                  <select class="profileInput">
                    <option selected value="default">Select a Company</option>
                    <!-- <option value="midland">Midland Appliances</option> -->
                    <option value="canAppl">Canadian Appliances</option>
                    <option value="goemans">Goemans</option>
                  </select>
                </td>
              </tr>
            </tbody>
          </table>
          <div id="lowerButtons">
            <!-- <button id="plus">Add Url</button> -->
            <button id="scrape" onclick="handleInput(this)">Scrape</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

